<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessOrderActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/thanhcong" />


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:src="@drawable/fsfe" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="300dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Your order will be delivered soon.
Thank you for choosing our app!" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:layout_marginVertical="20dp"
            android:background="@drawable/bottun_mhc"
            android:textColor="@color/white"

            android:text="Track your orders" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:background="@drawable/bottun_mhc"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Back to home" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
</RelativeLayout>