<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_mycart"
            android:layout_width="120dp"
            android:background="@drawable/bogoc"
            android:layout_height="120dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fff" />

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txtname_mycart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="$" />

                <TextView
                    android:id="@+id/txtprice_mycart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="12.00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconadd_mycart"
                    android:background="@drawable/icon_sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_add_24" />

                <TextView
                    android:id="@+id/txtquantity_mycart"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="01"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iconreduce_mycart"
                    android:background="@drawable/icon_sp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_close_mycart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>