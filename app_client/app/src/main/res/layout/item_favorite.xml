<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="120dp"
            android:background="@drawable/bogoc"
            android:layout_height="120dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/fff" />

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtname_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="$" />

                <TextView
                    android:id="@+id/txtprice_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="12.00" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_close_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ic_baseline_remove_circle_outline_24" />

            <ImageView
                android:id="@+id/icon_bag_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_sp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_baseline_shopping_bag_24" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>